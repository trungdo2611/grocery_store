@model WebQLyNongSan.Models.Supplier

@{
    ViewBag.Title = "Deltails";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="details">
    <div class="tableData">
        <div class="cardHeader form-index">
            <h2>Chi tiết nhà sản xuất @Model.Name</h2>
        </div>

        <div class="card-wrapper">
            <div class="card">


                <!-- card left -->
                <div class="main-content">
                    <h2 class="content-title">@Model.Name</h2>
                    <div class="content-element">
                        <p class="last-price">Địa chỉ: <span>@Model.Address</span></p>
                        <p class="last-price">Số điện thoại: <span>@Model.Phone</span></p>
                    </div>
                </div>

                <!--card right  -->            
            </div>
        </div>
    <div class="btn-deltails">
        <a class="btn-Edit-Details" href="~/Admin/Supplier/Edit/@Model.id">Chỉnh sửa</a>
        <a class="btn-Back-Details" href="~/Admin/Supplier/Index">Quay lại</a>
    </div>
    </div>
</div>
